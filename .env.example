
# Application
APP_NAME="Club Manager"
APP_URL=[https://yourdomain.com](https://yourdomain.com)
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=Europe/London

DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_user
DB_PASSWORD=your_password

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Microsoft Graph API
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_REDIRECT_URI=https://<ms-graph-callback-url>
MICROSOFT_MAILBOX_EMAIL=

# Email Settings
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Club Manager (Do not reply)"

# Security
SESSION_LIFETIME=120
CSRF_TOKEN_NAME=_token

# File Upload
MAX_UPLOAD_SIZE=5M
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Cache
CACHE_DRIVER=file
CACHE_TTL=3600

# Logging
LOG_LEVEL=debug
LOG_FILE=storage/logs/app.log
APP_LOGO_PATH=/assets/images/site/app-logo.png
